<Window x:Class="Magitek.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:astrologian="clr-namespace:Magitek.Views.UserControls.Astrologian"
        xmlns:bard="clr-namespace:Magitek.Views.UserControls.Bard"
        xmlns:dancer="clr-namespace:Magitek.Views.UserControls.Dancer"
        xmlns:blackMage="clr-namespace:Magitek.Views.UserControls.BlackMage"
        xmlns:bugs="clr-namespace:Magitek.Views.UserControls.Bugs"
        xmlns:customControls="clr-namespace:Magitek.Controls"
        xmlns:darkknight="clr-namespace:Magitek.Views.UserControls.DarkKnight"
        xmlns:dragoon="clr-namespace:Magitek.Views.UserControls.Dragoon"
        xmlns:lists="clr-namespace:Magitek.Views.UserControls.Lists"
        xmlns:machinist="clr-namespace:Magitek.Views.UserControls.Machinist"
        xmlns:monk="clr-namespace:Magitek.Views.UserControls.Monk"
        xmlns:ninja="clr-namespace:Magitek.Views.UserControls.Ninja"
        xmlns:paladin="clr-namespace:Magitek.Views.UserControls.Paladin"
        xmlns:redMage="clr-namespace:Magitek.Views.UserControls.RedMage"
        xmlns:samurai="clr-namespace:Magitek.Views.UserControls.Samurai"
        xmlns:reaper="clr-namespace:Magitek.Views.UserControls.Reaper"
        xmlns:blueMage="clr-namespace:Magitek.Views.UserControls.BlueMage"
        xmlns:scholar="clr-namespace:Magitek.Views.UserControls.Scholar"
        xmlns:summoner="clr-namespace:Magitek.Views.UserControls.Summoner"
        xmlns:userControls="clr-namespace:Magitek.Views.UserControls"
        xmlns:viewModels="clr-namespace:Magitek.ViewModels"
        xmlns:warrior="clr-namespace:Magitek.Views.UserControls.Warrior"
        xmlns:whitemage="clr-namespace:Magitek.Views.UserControls.WhiteMage"
        xmlns:gunbreaker="clr-namespace:Magitek.Views.UserControls.Gunbreaker"
        Width="900"
        Height="600"
        AllowsTransparency="True"
        Background="Transparent"
        Left="{Binding GeneralSettings.SettingsWindowPosX, Mode=TwoWay}"
        ResizeMode="NoResize"
        Top="{Binding GeneralSettings.SettingsWindowPosY, Mode=TwoWay}"
        Topmost="{Binding GeneralSettings.SettingsWindowTopMost}"
        WindowStyle="None">

    <Window.DataContext>
        <Binding Source="{x:Static viewModels:BaseSettings.Instance}" />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary Source="/Magitek;component/Styles/Magitek.xaml" />
    </Window.Resources>

    <Grid>
        <Border Background="{DynamicResource Background}" BorderBrush="{DynamicResource BlackBorder}" BorderThickness="1" CornerRadius="5,0,0,5" MouseLeftButtonDown="Drag">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity=".20" RenderingBias="Performance" ShadowDepth="0" />
            </Border.Effect>

            <TabControl FontSize="{Binding GeneralSettings.FontSize, Mode=TwoWay}" SelectionChanged="JobTabControlSelectionChanged">
                <TabControl.Style>
                    <Style TargetType="{x:Type TabControl}">
                        <Setter Property="TabStripPlacement" Value="Left" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabControl}">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Background="{DynamicResource ClassSelectorBackground}" />

                                        <Border Grid.Row="0" Grid.Column="0">
                                            <Border.Background>
                                                <DrawingBrush Opacity="0." Stretch="None" TileMode="Tile" Viewport="0,0,4,4" ViewportUnits="Absolute">
                                                    <DrawingBrush.Drawing>
                                                        <DrawingGroup>
                                                            <GeometryDrawing Brush="{DynamicResource LightSquareColor}">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,0,1,1" />
                                                                        <RectangleGeometry Rect="2,2,1,1" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Brush="{DynamicResource DarkSquareColor}">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,1,1,1" />
                                                                        <RectangleGeometry Rect="2,3,1,1" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                        </DrawingGroup>
                                                    </DrawingBrush.Drawing>
                                                </DrawingBrush>
                                            </Border.Background>
                                        </Border>

                                        <!--  Top Bar  -->
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Height="30" CornerRadius="3,3,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" Width="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Fill="{DynamicResource TabDividerVerticalRight}" />
                                                <Rectangle Grid.Column="1"
                                                           Grid.ColumnSpan="4"
                                                           Height="2"
                                                           HorizontalAlignment="Stretch"
                                                           VerticalAlignment="Bottom"
                                                           Fill="{DynamicResource TabDividerTop}" />

                                                <Image Grid.Column="1"
                                                       Height="22"
                                                       Margin="30,0,0,0"
                                                       HorizontalAlignment="Left"
                                                       Source="https://cdn.shopify.com/s/files/1/1786/8211/files/MagitekLogo.png?8023689778259610034"
                                                       Stretch="Uniform" />

                                                <CheckBox Grid.Column="3" Width="12" Height="12" IsChecked="{Binding GeneralSettings.SettingsWindowTopMost, Mode=TwoWay}" Style="{DynamicResource TopMostLock}" />
                                                <Button Grid.Column="4" Margin="5,0" VerticalAlignment="Center" Click="Close" Style="{DynamicResource CloseButton}" />

                                            </Grid>
                                        </Border>

                                        <!--  Job Selector  -->
                                        <Border Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                                            <Border.Background>
                                                <DrawingBrush Opacity="0." Stretch="None" TileMode="Tile" Viewport="0,0,4,4" ViewportUnits="Absolute">
                                                    <DrawingBrush.Drawing>
                                                        <DrawingGroup>
                                                            <GeometryDrawing Brush="{DynamicResource LightSquareColor}">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,0,1,1" />
                                                                        <RectangleGeometry Rect="2,2,1,1" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Brush="{DynamicResource DarkSquareColor}">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,1,1,1" />
                                                                        <RectangleGeometry Rect="2,3,1,1" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                        </DrawingGroup>
                                                    </DrawingBrush.Drawing>
                                                </DrawingBrush>
                                            </Border.Background>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <TabPanel Grid.Row="0" IsItemsHost="true" />

                                                <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Width="2" Fill="{DynamicResource TabDividerVerticalLeft}" />

                                            </Grid>
                                        </Border>

                                        <!--  Content  -->
                                        <Border Grid.Row="1" Grid.Column="2" Background="{DynamicResource ClassSelectorBackground}" />

                                        <ContentPresenter Grid.Row="1" Grid.Column="2" ContentSource="SelectedContent" />

                                        <!--  Bottom Bar  -->
                                        <Border Grid.Row="2" Grid.Column="0">
                                            <Border.Background>
                                                <DrawingBrush Opacity="0." Stretch="None" TileMode="Tile" Viewport="0,0,4,4" ViewportUnits="Absolute">
                                                    <DrawingBrush.Drawing>
                                                        <DrawingGroup>
                                                            <GeometryDrawing Brush="{DynamicResource LightSquareColor}">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,0,1,1" />
                                                                        <RectangleGeometry Rect="2,2,1,1" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Brush="{DynamicResource DarkSquareColor}">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,1,1,1" />
                                                                        <RectangleGeometry Rect="2,3,1,1" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                        </DrawingGroup>
                                                    </DrawingBrush.Drawing>
                                                </DrawingBrush>
                                            </Border.Background>
                                        </Border>

                                        <Rectangle Grid.Row="2" Grid.Column="0" Width="2" HorizontalAlignment="Right" Fill="{DynamicResource TabDividerVerticalRight}" />

                                        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Background="{DynamicResource ClassSelectorBackground}" />

                                        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="30">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0" Click="DebuggingClick" Style="{DynamicResource TabButtonDebugging}" />
                                                <Rectangle Grid.Column="1" Width="2" Fill="{DynamicResource TabDividerVerticalRight}" />
                                                <Button Grid.Column="2" Command="{Binding ShowSettingsModal}" Style="{DynamicResource TabButtonSettings}" />
                                                <Rectangle Grid.Column="3" Width="2" Fill="{DynamicResource TabDividerVerticalRight}" />
                                                <Button Grid.Column="4" Click="OpenersClick" Style="{DynamicResource TabButtonOpeners}" />
                                                <Rectangle Grid.Column="5" Width="2" Fill="{DynamicResource TabDividerVerticalRight}" />
                                                <Button Grid.Column="6" Click="GambitsClick" Style="{DynamicResource TabButtonGambits}" />
                                                <Rectangle Grid.Column="7" Width="2" Fill="{DynamicResource TabDividerVerticalRight}" />
                                                <!--<Button Grid.Column="8" Click="BossFightLogClick" Style="{DynamicResource TabButtonBossFight}" />
                                                <Rectangle Grid.Column="9" Width="2" Fill="{DynamicResource TabDividerVerticalRight}" />-->
                                            </Grid>

                                            <Border Grid.Column="1" Grid.ColumnSpan="3" Margin="2,0,0,0" Background="{DynamicResource ClassSelectorBackground}" />
                                            <Rectangle Grid.Column="0"
                                                       Grid.ColumnSpan="4"
                                                       Height="2"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Top"
                                                       Fill="{DynamicResource TabDivider}" />

                                            <TextBlock Grid.Column="3"
                                                       Margin="0,0,7,0"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Bottom"
                                                       Foreground="{DynamicResource Info}"/>
                                        </Grid>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Style>
                <TabItem Name="BossFightLog" Style="{x:Null}" Visibility="Collapsed">
                    <customControls:BossFightLog />
                </TabItem>

                <TabItem Name="GambitsTab" Style="{x:Null}" Visibility="Collapsed">
