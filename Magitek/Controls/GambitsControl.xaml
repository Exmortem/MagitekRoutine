                                                                                                <ControlTemplate.Triggers>
                                                                                                    <Trigger Property="Tag" Value="Yes">
                                                                                                        <Setter TargetName="Background" Property="Background" Value="{DynamicResource Info}" />
                                                                                                    </Trigger>
                                                                                                    <Trigger Property="ItemsControl.HasItems" Value="False">
